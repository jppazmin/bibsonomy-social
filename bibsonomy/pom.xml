		<extensions>
			<extension>
				<!-- wagon provider to enable deployment of artifacts via webdav (to 
					artifatory, in our case. According to http://docs.codehaus.org/display/MAVENUSER/Deploying+3rd+Party+Jars+With+WebDAV 
					this should not be necessary from Maven 2.0.9, as the wagon-webdav lib should 
					be included in the later maven distributions - but at least for hudson's 
					setup, it only works this way. Maybe when the maven version of hudson (currently 
					2.2.1) gets updated, we can remove this build extension. (dbe, 20100811) -->
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-webdav</artifactId>
				<version>1.0-beta-2</version>
			</extension>
		</extensions>
	</build>
	<profiles>
		<profile>
		<id>copy-classes-to-webapp-profile</id>
				<!-- 
				    When in development mode, we use the resources plugin to copy all compiled classes (e.g. 
					the content of /target/classes for each module) into the webapp-directory 
					of bibsonomy-webapp. This is mainy intended to ease the development process 
					using the Sysdeo Eclipse plugin - when a module class is modified, it is 
					(after mvn compile) directly available in the running webapp via hot code 
					replacement (assuming the webapp root is set to /src/main/webapp in the 
					bibsononomy-webapp project). -->					
		<activation>
			<property>
				<name>mode</name>
				<value>development</value>
			</property>
		</activation>
		<build>
			<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-classes-to-webapp</id>
						<!-- execute copy after compilation -->
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>
								<!-- the root directory of the running webapp -->
								${basedir}/../bibsonomy-webapp/src/main/webapp/WEB-INF/classes
							</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/target/classes</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		</build>			
			
		</profile>
	</profiles>
